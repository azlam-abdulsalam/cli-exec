{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ]
}
